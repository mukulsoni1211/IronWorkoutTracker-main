@model IEnumerable<IronWorkoutTracker.Domain.Entities.WorkoutProgram>
@using IronWorkoutTracker.Domain.Entities;
@{
    var currentUserId = (int)ViewBag.CurrentUserId;
    var workoutProgram = Model.FirstOrDefault();
    
    if (workoutProgram == null)
    {
        <div class="alert alert-info">
            No active program. Start a program from the <strong>My Programs</strong> tab.
        </div>
        return;
    }

    var userProgram = workoutProgram.UserPrograms?.FirstOrDefault(up => up.UserId == currentUserId && up.Status == ProgramStatus.InProgress);
    
    if (userProgram == null)
    {
        <div class="alert alert-info">
            No active program. Start a program from the <strong>My Programs</strong> tab.
        </div>
        return;
    }
}

<div class="workout-container">
    <!-- Program Header -->
    <div class="program-header mb-4">
        <h3>@workoutProgram.Name</h3>
        <p class="text-muted">
            Active Program â€¢ Started @userProgram.StartDate.ToString("h:mm tt MMM dd, yyyy")
        </p>
    </div>

    <!-- Workout Days List -->
    <div class="workout-days-list">
        @if (userProgram.WorkoutDays == null || userProgram.WorkoutDays.Count == 0)
        {
            <div class="alert alert-warning">
                No workout days for this program.
            </div>
        }
        else
        {
            @foreach (var workoutDay in userProgram.WorkoutDays.OrderBy(wd => wd.Order))
            {
                <div class="card mb-3 workout-day-card">
                    <!-- Workout Day Header -->
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@workoutDay.Name</h5>
                            <small class="text-muted">Day @(workoutDay.Order)</small>
                        </div>
                        <span class="badge badge-primary">@(workoutDay.Exercises?.Count ?? 0) exercises</span>
                    </div>

                    <!-- Exercises List -->
                    <div class="card-body">
                        @if (workoutDay.Exercises == null || workoutDay.Exercises.Count == 0)
                        {
                            <p class="text-muted mb-0">No exercises for this day.</p>
                        }
                        else
                        {
                            <div class="exercises-list">
                                @foreach (var exercise in workoutDay.Exercises)
                                {
                                    <div class="exercise-item">
                                        <div class="exercise-header">
                                            <h6 class="exercise-name">@exercise.ExerciseName</h6>
                                            <span class="exercise-id text-muted">ID: @exercise.ExerciseId</span>
                                        </div>
                                        
                                        <div class="exercise-details">
                                            <small class="text-muted">
                                                @if (exercise.Sets != null && exercise.Sets.Count > 0)
                                                {
                                                    <span class="detail-badge">@exercise.Sets sets</span>
                                                }
                                               
                                            </small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
.workout-container {
    padding: 20px 0;
}

.program-header {
    border-bottom: 2px solid #007bff;
    padding-bottom: 15px;
}

.program-header h3 {
    color: #007bff;
    font-weight: 600;
    margin-bottom: 5px;
}

.workout-days-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.workout-day-card {
    border-left: 4px solid #007bff;
    transition: box-shadow 0.3s ease;
}

.workout-day-card:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.workout-day-card .card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.card-header h5 {
    color: #333;
    margin: 0;
}

.exercises-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.exercise-item {
    padding: 12px;
    background-color: #f8f9fa;
    border-radius: 6px;
    border-left: 3px solid #28a745;
}

.exercise-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
}

.exercise-name {
    color: #333;
    font-weight: 500;
    margin: 0;
}

.exercise-id {
    font-size: 12px;
}

.exercise-details {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.detail-badge {
    display: inline-block;
    background-color: #e7f3ff;
    color: #007bff;
    padding: 2px 8px;
    border-radius: 4px;
    font-weight: 500;
}

.alert {
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 20px;
}

.alert-info {
    background-color: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
}

.alert-warning {
    background-color: #fff3cd;
    color: #856404;
    border: 1px solid #ffeaa7;
}

.badge-primary {
    background-color: #007bff;
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
}
</style>
