    color: #007bff;
    font-weight: 600;
    margin-bottom: 5px;
}

.workout-days-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.workout-day-card {
    border-left: 4px solid #007bff;
    transition: box-shadow 0.3s ease;
}

.workout-day-card:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.workout-day-card .card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.card-header h5 {
    color: #333;
    margin: 0;
}

.exercises-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.exercise-item {
    padding: 12px;
    background-color: #f8f9fa;
    border-radius: 6px;
    border-left: 3px solid #28a745;
}

.exercise-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
}

.exercise-name {
    color: #333;
    font-weight: 500;
    margin: 0;
}

.exercise-id {
    font-size: 12px;
}

.exercise-details {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.detail-badge {
    display: inline-block;
    background-color: #e7f3ff;
    color: #007bff;
    padding: 2px 8px;
    border-radius: 4px;
    font-weight: 500;
}

.alert {
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 20px;
}

.alert-info {
    background-color: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
}

.alert-warning {
    background-color: #fff3cd;
    color: #856404;
    border: 1px solid #ffeaa7;
}

.badge-primary {
    background-color: #007bff;
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
}
</style>
