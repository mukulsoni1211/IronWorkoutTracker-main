@model IEnumerable<IronWorkoutTracker.Domain.Entities.WorkoutProgram>
@using IronWorkoutTracker.Domain.Entities;
@{
    var currentUserId = (int)ViewBag.CurrentUserId;
    var workoutProgram = Model.FirstOrDefault();
    
    if (workoutProgram == null)
    {
        <div class="alert alert-info">
            No active program. Start a program from the <strong>My Programs</strong> tab.
        </div>
        return;
    }

    var userProgram = workoutProgram.UserPrograms?.FirstOrDefault(up => up.UserId == currentUserId && up.Status == ProgramStatus.InProgress);
    
    if (userProgram == null)
    {
        <div class="alert alert-info">
            No active program. Start a program from the <strong>My Programs</strong> tab.
        </div>
        return;
    }
}

<div class="workout-container">
    <!-- Program Header -->
    <div class="program-header mb-4">
        <h3>@workoutProgram.Name</h3>
        <p class="text-muted">
            Active Program â€¢ Started @userProgram.StartDate.ToString("h:mm tt MMM dd, yyyy")
        </p>
    </div>

    <!-- Workout Days List -->
    <div class="workout-days-list">
        @if (userProgram.WorkoutDays == null || userProgram.WorkoutDays.Count == 0)
        {
            <div class="alert alert-warning">
                No workout days for this program.
            </div>
        }
        else
        {
            @foreach (var workoutDay in userProgram.WorkoutDays.OrderBy(wd => wd.Order))
            {
                <div class="card mb-3 workout-day-card">
                    <!-- Workout Day Header -->
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@workoutDay.Name</h5>
                            <small class="text-muted">Day @(workoutDay.Order)</small>
                        </div>
                        <span class="badge badge-primary">@(workoutDay.Exercises?.Count ?? 0) exercises</span>
                    </div>

                    <!-- Exercises List -->
                    <div class="card-body">
                        @if (workoutDay.Exercises == null || workoutDay.Exercises.Count == 0)
                        {
                            <p class="text-muted mb-0">No exercises for this day.</p>
                        }
                        else
                        {
                            <div class="exercises-table">
                                @foreach (var exercise in workoutDay.Exercises)
                                {
                                    <div class="exercise-row d-flex align-items-start gap-3 p-3 border-bottom hover-row">
                                        <!-- Name Column -->
                                        <div class="col-md-3 flex-grow-1">
                                            <div class="exercise-name mb-1">
                                                <div class="name-main">@exercise.Exercise.Name</div>
                                                <small class="text-muted description">@exercise.Exercise.Description</small>
                                            </div>
                                        </div>


                                        <!-- Category Column -->
                                        <div class="col-md-2">
                                            <span class="badge bg-secondary">@exercise.Exercise.Category</span>
                                        </div>

                                        <!-- Equipment Column -->
                                        <div class="col-md-2">
                                            <span class="badge bg-info text-dark">@exercise.Exercise.Equipment</span>
                                        </div>

                                        <!-- Action Buttons Column -->
                                        <div class="col-md-2 text-end">
                                            <button type="button"
                                                class="btn btn-success mb-3"
                                                id="addDayBtn"
                                                data-action="Create"
                                                data-controller="WorkoutDayExerciseSet"
                                                data-workout-day-exercise-id="@exercise.WorkoutDayExerciseId"
                                                data-bs-toggle="modal"
                                                data-bs-target="#GlobalModal">
                                                Workout
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>

                        }
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="GlobalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" id="modalContent">
            <!-- Loaded via AJAX -->
        </div>
    </div>
</div>
<style>
