@using IronWorkout.Shared.EnvironmentStateModels
@model IEnumerable<IronWorkoutTracker.Domain.Entities.WorkoutProgram>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Finished Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        
        var userProgram = item.UserPrograms?.FirstOrDefault();
        
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@userProgram?.StartDate.ToString("dd MMM, yyyy")</td>
            <td>
                <a asp-controller="WorkoutProgram" asp-action="Details" 
                   class="btn btn-sm btn-primary" asp-route-id="@item.WorkoutProgramId">
                    Details
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
