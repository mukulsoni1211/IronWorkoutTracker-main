@model IronWorkoutTracker.Domain.Entities.WorkoutProgram

<h2>Edit Workout Program</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="WorkoutProgramId" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

   <div class="mb-3 form-check">
	    <input asp-for="Visibility" class="form-check-input" />
	    <label asp-for="Visibility" class="form-check-label"></label>
	    <span asp-validation-for="Visibility" class="text-danger"></span>
	</div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>