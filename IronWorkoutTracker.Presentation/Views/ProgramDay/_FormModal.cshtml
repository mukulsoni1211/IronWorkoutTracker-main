@model IronWorkoutTracker.Domain.Entities.ProgramDay

<div class="modal-header">
    <h5 class="modal-title">
        @(Model?.ProgramDayId == 0 ? "Add Program Day" : "Edit Program Day")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="programDayForm" asp-action="SaveDay" method="post">
    <div class="modal-body">
        <input type="hidden" asp-for="ProgramDayId" />
        <input type="hidden" asp-for="WorkoutProgramId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Note" class="form-label"></label>
            <textarea asp-for="Note" class="form-control"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
