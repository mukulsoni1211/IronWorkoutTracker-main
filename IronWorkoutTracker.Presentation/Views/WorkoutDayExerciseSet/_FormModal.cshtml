@model IronWorkoutTracker.Domain.Entities.WorkoutDayExerciseSet

<div class="modal-header">
    <h5 class="modal-title">
        @(Model?.WorkoutDayExerciseSetId == 0 || Model?.WorkoutDayExerciseSetId == null ? "Workout" : "Edit Set")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="programDayExerciseSetForm" asp-action="SaveSet" method="post">
    <div class="modal-body">
        @if (Model?.WorkoutDayExerciseSetId > 0)
        {
            <input type="hidden" name="WorkoutDayExerciseSetId" value="@Model.WorkoutDayExerciseSetId" />
        }
        
        <input type="hidden" name="WorkoutDayExerciseId" value="@Model.WorkoutDayExerciseId" />

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="Reps" class="form-label">Reps</label>
                    <input type="number" 
                           id="Reps" 
                           name="Reps" 
                           class="form-control"
                           value="@Model?.Reps"
                           placeholder="e.g., 10" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label for="Weight" class="form-label">Weight (kg)</label>
                    <input type="number" 
                           id="Weight" 
                           name="Weight" 
                           class="form-control"
                           step="0.5"
                           value="@Model?.Weight"
                           placeholder="e.g., 50.5" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="RestSeconds" class="form-label">Rest (seconds)</label>
                    <input type="number" 
                           id="RestSeconds" 
                           name="RestSeconds" 
                           class="form-control"
                           value="@Model?.RestSeconds"
                           placeholder="e.g., 60" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label for="RPE" class="form-label">RPE (Rate of Perceived Exertion)</label>
                    <input type="number" 
                           id="RPE" 
                           name="RPE" 
                           class="form-control"
                           min="1"
                           max="10"
                           value="@Model?.RPE"
                           placeholder="1-10" />
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="Note" class="form-label">Note</label>
            <textarea id="Note" 
                      name="Note" 
                      class="form-control" 
                      rows="2"
                      placeholder="Any notes for this set">@Model?.Note</textarea>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
