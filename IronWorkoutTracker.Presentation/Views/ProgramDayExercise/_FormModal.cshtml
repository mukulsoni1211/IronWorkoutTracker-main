@model IronWorkoutTracker.Presentation.ViewModels.ProgramDayExerciseFormViewModel

<div class="modal-header">
    <h5 class="modal-title">
        @(Model.ProgramDayExercise?.ProgramDayExerciseId == 0 || Model.ProgramDayExercise?.ProgramDayExerciseId == null ? "Add Exercise" : "Edit Exercise")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="programDayExerciseForm" asp-action="SaveExercise" method="post">
    <div class="modal-body">
        @if (Model.ProgramDayExercise?.ProgramDayExerciseId > 0)
        {
            <input type="hidden" name="ProgramDayExerciseId" value="@Model.ProgramDayExercise.ProgramDayExerciseId" />
        }
        
        @if (Model.ProgramDayExercise != null)
        {
            <input type="hidden" name="ProgramDayId" value="@Model.ProgramDayExercise.ProgramDayId" />
        }

        <div class="mb-3">
            <label for="ExerciseId" class="form-label">Exercise</label>
            <select id="ExerciseId" name="ExerciseId" class="form-select" required>
                <option value="">-- Select Exercise --</option>
                @foreach (var exercise in Model.Exercises)
                {
                    if (Model.ProgramDayExercise?.ExerciseId == exercise.ExerciseId)
                    {
                        <option value="@exercise.ExerciseId" selected>
                            @exercise.Name
                            @if (!string.IsNullOrEmpty(exercise.Category))
                            {
                                <text>(@exercise.Category)</text>
                            }
                        </option>
                    }
                    else
                    {
                        <option value="@exercise.ExerciseId">
                            @exercise.Name
                            @if (!string.IsNullOrEmpty(exercise.Category))
                            {
                                <text>(@exercise.Category)</text>
                            }
                        </option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="TrainingStyle" class="form-label">Training Style</label>
            <input type="text" 
                   id="TrainingStyle" 
                   name="TrainingStyle" 
                   class="form-control"
                   value="@Model.ProgramDayExercise?.TrainingStyle"
                   placeholder="e.g., 3x10, 5x5, AMRAP" />
            <small class="text-muted">e.g., 3 sets of 10 reps, 5x5, AMRAP, etc.</small>
        </div>

        <div class="mb-3">
            <label for="Note" class="form-label">Note</label>
            <textarea id="Note" 
                      name="Note" 
                      class="form-control" 
                      rows="3"
                      placeholder="Additional notes for this exercise">@Model.ProgramDayExercise?.Note</textarea>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
